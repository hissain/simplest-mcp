{
    "name": "simplest-mcp",
    "version": "1.0.0",
    "description": "A simple MCP (Model Context Protocol) server and client demo showcasing prompts, tools, and resources",
    "main": "local/server.js",
    "type": "module",
    "scripts": {
        "start:local": "node local/server.js",
        "client:local": "node local/client.js",
        "test:local": "cd local && ./test.sh",
        "start:remote": "wrangler dev -c remote/wrangler.toml",
        "deploy": "wrangler deploy -c remote/wrangler.toml",
        "client:remote": "node remote/client.js"
    },
    "keywords": [
        "mcp",
        "model-context-protocol",
        "demo",
        "server",
        "client"
    ],
    "author": "Md. Sazzad Hissain Khan",
    "license": "MIT",
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.0.4"
    }
}
